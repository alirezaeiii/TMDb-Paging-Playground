<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.sample.android.tmdb.domain.Movie" />

        <variable
            name="callback"
            type="com.sample.android.tmdb.ui.ItemClickCallback" />

        <variable
            name="poster"
            type="android.widget.ImageView" />

        <variable
            name="name"
            type="android.widget.TextView" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:clickable="true"
        android:elevation="@dimen/z_app_bar"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{() -> callback.onClick(movie, poster, name)}"
        app:cardElevation="@dimen/z_app_bar"
        app:movieImageUrl="@{movie.posterPath}"
        tools:ignore="KeyboardInaccessibleWidget">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="@string/view_name_header_image"
            tools:ignore="contentDescription" />

        <View
            android:id="@+id/title_background"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:alpha="0.8"
            android:gravity="center"
            tools:background="@color/black_translucent_60" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@{movie.title}"
            android:textSize="12sp"
            android:transitionName="@string/view_name_header_title" />

    </android.support.v7.widget.CardView>

</layout>